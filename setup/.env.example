# Variables de entorno para Máquina Expendedora v2.0
# Copia este archivo como .env en la raíz del proyecto y configura tus valores

# === CONFIGURACIÓN GENERAL ===
SECRET_KEY=your-secret-key-here
FLASK_ENV=development
FLASK_DEBUG=True

# === CONFIGURACIÓN DE PLATAFORMA ===
PLATFORM=windows
GPIO_ENABLED=False

# Para Raspberry Pi, cambiar a:
# PLATFORM=raspberry
# GPIO_ENABLED=True

# === CONFIGURACIÓN DE SERVIDOR ===
HOST=127.0.0.1
PORT=5000
WINDOW_WIDTH=1024
WINDOW_HEIGHT=768

# === CONFIGURACIÓN DE BASE DE DATOS ===
DATABASE_PATH=database/vending_machine.db

# === CONFIGURACIÓN DE PAGOS - STRIPE ===
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# === CONFIGURACIÓN DE PAGOS - PAYPAL ===
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Para producción, cambiar a:
# PAYPAL_MODE=live

# === CONFIGURACIÓN TPV ===
TPV_ENABLED=False
TPV_PORT=/dev/ttyUSB0
TPV_BAUDRATE=9600
TPV_TIMEOUT=10

# === CONFIGURACIÓN ADICIONAL ===
# Añade aquí cualquier configuración personalizada
